<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
        <script src="http://cdn.tailwindcss.com"></script>
    </head>
    <body>
        <div class="w-full min-h-screen bg-zinc-900 text-white p-10">

            <div class="w-full flex justify-end">
                <a
                    class="bg-red-500 rounded-md px-3 py-2 text-sm mb-5 inline-block"
                    href="/logout">Logout</a>
            </div>
            <div class="flex justify-center">
                <div class="w-full max-w-2xl">

                    <div class="flex items-start gap-3">
                        <div
                            class="w-10 h-10 bg-red-500 rounded-md overflow-hidden">
                            <img class="w-full h-full object-cover"
                                src="/images/uploads/<%= user.profilepic %>"
                                alt>
                        </div>
                        <h3 class="text-3xl"><span
                                class="font-base">Hello</span>, <%= user.name %>
                            ðŸ‘‹</h3>
                    </div>

                    <h5 class="mb-5 mt-3">You can create a new post</h5>

                    <form action="/post" method="post">
                        <textarea placeholder="What's on your mind?"
                            class="p-3 w-full outline-none resize-none bg-transparent border-2 border-zinc-800 rounded-md"
                            name="content" id></textarea>
                        <input
                            class="w-40 px-3 py-2 bg-blue-500 block rounded-md mt-2"
                            type="submit" value="Create Post">
                    </form>

                    <div class="posts mt-20">
                        <h3 class="text-zinc-400">Your Posts.</h3>
                        <div class="postcontainer mt-5">
                            <% user.posts.reverse().forEach(function(post){ %>
                            <div
                                class="post w-full p-4 mb-4 rounded-md border bg-zinc-800">
                                <h4 class="text-blue-500 mb-2">@<%=
                                    user.username %></h4>
                                <p class="text-sm tracking-tight"><%=
                                    post.content %></p>
                                <div class="btns flex gap-4 mt-5">
                                    <a href="/like/<%= post._id %>"
                                        class="text-blue-500">
                                        <%= post.likes.indexOf(user._id) === -1
                                        ? "Like" : "Unlike" %>
                                    </a>
                                    <a href="/edit/<%= post._id %>"
                                        class="text-zinc-600">Edit</a>
                                </div>
                                <small class="mt-2 inline-block"><%=
                                    post.likes.length %> like</small>
                            </div>
                            <% }) %>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </body>
</html>
